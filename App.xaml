<Application x:Class="Lopushok.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Lopushok"
             Startup="Application_Startup"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="MainColor"
                         Color="#FFFFFF" />
        <SolidColorBrush x:Key="SecondColor"
                         Color="#CEFFF9" />
        <SolidColorBrush x:Key="AccentColor"
                         Color="#00CC76" />
        <FontFamily x:Key="MainFont">Gabriola</FontFamily>
        
        <Style TargetType="Window">
            <Setter Property="FontFamily"
                    Value="{StaticResource MainFont}" />
            <Setter Property="Background"
                    Value="{StaticResource MainFont}" />
            <Setter Property="FontSize"
                    Value="14" />
        </Style>

        <Style TargetType="Page">
            <Setter Property="FontFamily"
                    Value="{StaticResource MainFont}" />
        </Style>
    </Application.Resources>
</Application>
